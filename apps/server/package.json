{
  "name": "server",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@graphql-tools/schema": "^10.0.0",
    "@prisma/client": "4.14.1",
    "@quixo3/prisma-session-store": "^3.1.11",
    "@types/express-session": "^1.17.7",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "graphql": "^16.6.0",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-scalars": "^1.22.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.13.1",
    "ioredis": "^5.3.2",
    "request-ip": "^3.3.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "3.3.1",
    "@graphql-codegen/client-preset": "^3.0.1",
    "@graphql-codegen/introspection": "3.0.1",
    "@graphql-codegen/typescript": "3.0.4",
    "@graphql-codegen/typescript-document-nodes": "3.0.4",
    "@graphql-codegen/typescript-resolvers": "3.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.2.1",
    "@types/request-ip": "^0.0.37",
    "@typescript-eslint/parser": "^5.59.6",
    "chokidar-cli": "^3.0.0",
    "esm": "^3.2.25",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "prisma": "^4.14.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "watch:graphql": "npx chokidar \"src/graphql/type-defs/**/*.ts\" -c \"yarn run graphql-codegen\"",
    "graphql-codegen": "graphql-codegen -r tsconfig-paths/register --config src/codegen.ts",
    "watch:app": "nodemon -r tsconfig-paths/register --watch 'src/**/*' src/index.ts",
    "dev": "yarn watch:graphql & yarn watch:app",
    "prisma:build": "npx prisma db push && npx prisma generate",
    "build": "yarn prisma:build && yarn graphql-codegen && tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "start": "node dist",
    "codegen": "graphql-codegen --config src/codegen.ts"
  }
}
